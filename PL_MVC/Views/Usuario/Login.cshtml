
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/Style/StyleLogin.css" rel="stylesheet" />
    <title>Login</title>
</head>
<body>
    <div class="login">
        <h1>Login</h1>
        @using (Html.BeginForm("Login", "Usuario", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <form method="post">
                <input type="text" name="Email" placeholder="Username" required="required" id="Username" />
                <input type="password" name="password" placeholder="Password" required="required" id="Pass" />
                <button type="submit" class="btn btn-primary btn-block btn-large">Login </button>
            </form>
        }
        </div>

</body>
</html>
