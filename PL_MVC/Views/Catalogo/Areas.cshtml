@model ML.Area
@{
    ViewBag.Title = "Areas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-lg-start">
    <h2>Areas</h2>
</div>
<hr />
@using (Html.BeginForm("Areas", "Catalogo", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    <div class="col-md-3 mb-4">
        @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control", @placeholder = "Nombre" })
    </div>
    <button class="btn btn-dark mb-4" type="submit">Buscar</button>
}
<hr />
<div class="row justify-content-center">
    @foreach (ML.Area area in Model.Areas)
    {
       
        <div class="col-4">
            <div class="card" style="width: 18rem;">
                <div class="card" style="width: 18rem;">
                    <img class="card-img-top" src="https://d1ih8jugeo2m5m.cloudfront.net/2022/07/el-ecommerce-que-es.jpg" alt="Card image cap">
                    <div class="card-body">
                        <h2>@area.Nombre</h2>
                        <p class="card-text">@area.Descripcion</p>
                        <a type="button" class="btn btn-outline-success btn-lg" href="@Url.Action("Departamentos","Catalogo", new { IdAreas = area.IdArea})"><i class="bi bi-eye"></i></a>
                    </div>
                </div>
            </div>
        </div>

    }

</div>
