@model ML.Departamento
@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-lg-start">
    <h2>Usuario</h2>
    <h5>Ingrese los datos del usuario</h5>
</div>
<hr />
@using (Html.BeginForm("Form", "Departamento", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(Model => Model.IdDepartamento)

    <div class="container text-center">
        <div class="row justify-content-evenly">

            <div class="col-4">
                <div class="row mb-4">
                    <div class="col-md-6">
                        @Html.LabelFor(model => Model.Nombre, new { @class = "hidden" })
                        @Html.TextBoxFor(model => Model.Nombre, new { @class = "form-control hidden" })
                    </div>
                </div>
            </div>
            <div class="col-4">
                <div class="row mb-4">
                    <div class="col-md-6">
                        @Html.LabelFor(model => Model.Area.IdArea, new { @class = "hidden" })
                        @Html.DropDownListFor(model => Model.Area.IdArea, new SelectList(Model.Area.Areas, "IdArea", "Nombre"), "Selecciona el area correspondiente", new { @class = "form-select hidden" })
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="text-center">
        <button  class="btn btn-success" type="submit"><i class="fa-solid fa-floppy-disk"></i> Guardar</button>
        <a id="btnCancelar" class="btn btn-danger" href="@Url.Action("GetAll", "Departamento")"><i class="fa-solid fa-right-from-bracket"></i> Volver</a>
    </div>
}

